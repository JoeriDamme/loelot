{
  "name": "loelot",
  "version": "1.0.0",
  "description": "loelot project",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "test": "test",
    "test:unit": "cross-env NODE_ENV=test nyc --require ts-node/register mocha './test/unit/**/*.spec.ts'",
    "test:integration": "cross-env NODE_ENV=test nyc --require ts-node/register mocha './test/integration/**/*.spec.ts'",
    "dev": "nodemon",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "pre-commit": [
    "lint",
    "test:unit",
    "test:integration"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoeriDamme/loelot.git"
  },
  "keywords": [
    "loelot"
  ],
  "author": "Joeri Damme",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JoeriDamme/loelot/issues"
  },
  "homepage": "https://github.com/JoeriDamme/loelot#readme",
  "dependencies": {
    "@types/config": "0.0.34",
    "config": "^2.0.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "nyc": "^13.1.0",
    "pre-commit": "^1.2.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-no-unused-expression-chai": "^0.1.4"
  }
}
